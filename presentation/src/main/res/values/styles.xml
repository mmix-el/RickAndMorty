<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.Theme.RickAndMorty" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/yellow_green</item>
        <item name="colorOnPrimary">@color/cyan</item>
        <item name="colorPrimaryDark">@color/dark_green</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorAccent">@color/dark_green</item>
        <item name="colorSurface">@color/gray_50</item>
        <item name="colorSecondary">@color/cyan</item>
        <item name="android:colorBackground">@color/yellow_green</item>
    </style>

    <style name="Theme.RickAndMorty" parent="Base.Theme.RickAndMorty" />

    <style name="Theme.RickAndMorty.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextAppearance.RickAndMorty.Toolbar.Text" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="Theme.RickAndMorty.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" >
        <item name="android:textColor">?attr/colorPrimaryDark</item>
    </style>

</resources>